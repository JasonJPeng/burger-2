 <div id="fresh">
     <h2>Fresh Burgers</h2>
     <hr>
 {{#each all}}
   {{#unless devoured}}
    <p>
      {{name}}

      {{!-- <button data-id="{{id}}" class="devour">Devour It!</button> --}}
      <button  data-id="{{id}}" type="button" class="btn btn-outline-success btn-sm devour">Devour It !</button>
      <input type="text" name="customer-{{id}}" id="customer-{{id}}" size=10 >
    </p>
   {{/unless}} 
  
  {{/each}}

 </div>

 <div id = "order">
<img src = "/assets/img/burger-2.gif" width="200px" >
<form action="/api/order" method="POST">
  <label>Order your burger: </label> 
	<input type="text" name="burger"></input>

	{{!-- <button type="submit">Order Now</button>    --}}
    <button type="submit" class="btn btn-primary">Order Now</button> 
</form>

 </div>
 
  
  <div id="devoured">
      <h2>Devoured Burgers</h2>
      <hr>
  {{#each all}}
   {{#if devoured}}
    <p>
     {{name}} {{#if customer}} (eaten by {{customer}}) {{/if}}
    </p>
   {{/if}} 
  
  {{/each}}
  </div>

  